<% content_for :header_title do %>Kontakt<% end %>


<div class="contact-container">


  <% @groups.each do |group| %>
      <div class="row title-row first-row">
        <h3 class="title-attached-to-side top-title">
          <%= group.title %>
        </h3>
      </div>


      <div class="row card-row">
        <div class="card-container">
          <% Contact.where(group: group.group).each do |contact| %>
              <div class="card contact-card">
                <div class="card-image">
                  <img src="https://s3-eu-west-1.amazonaws.com/lintek-sof/webapp/placeholder/contact_placeholder.svg">
                </div>
                <div class="card-content no-border">
                  <span class="title">
                    <%= contact.title %>
                  </span>
                  <br>
                  <span class="name">
                    <%= contact.name %>
                  </span>
                </div>
                <div class="card-content no-background">
                  <span class="email">
                    <%= contact.email %>
                  </span>
                </div>
              </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>

