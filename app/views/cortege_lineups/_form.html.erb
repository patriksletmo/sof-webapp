<form method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="row">
    <div class="col s12 m6">
      <div class="row">
        <div class="input-field col s12">
          <label for="name">Kårtegenamn</label>
          <input id="name" type="text" name="item[name]" required>
        </div>
        <div class="input-field col s12">
          <textarea id="description" type="text" class="materialize-textarea" name="item[description]" required><%= @cortege_lineup['description'] %></textarea>
          <label for="motivation">Beskrivning</label>
        </div>
        <div class="input-field col s12">
          <textarea id="image" type="text" class="materialize-textarea" name="item[image]" required><%= @cortege_lineup['image'] %></textarea>
          <label for="image">Länk till bild</label>
        </div>
        <div class="input-field col s12">
          <textarea id="cortege_type" type="text" class="materialize-textarea" name="item[cortege_type]" required><%= @cortege_lineup['cortege_type'] %></textarea>
          <label for="cortege_type">Typ av kårtege</label>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <button class="waves-effect waves-light btn" type="submit">Lägg till kårtege</button>
    </div>
  </div>
</form>