<% content_for :header_title do %>Hantera kårteger<% end %>

<div class="container">
  <table class="highlight responsive-table">
    <thead>
    <tr>
      <th>Namn</th>
      <th>Ägare</th>
      <th>E-mail</th>
      <th>Status</th>
      <th>Godkänd</th>
      <th>Betald</th>
    </tr>
    </thead>
    <tbody>
    <% @corteges.each do |cortege| %>
        <tr data-href="<%= url_for action: :show, id: cortege['id'] %>">
          <td><%= cortege['name'] %></td>
          <td><%= cortege['user']['display_name'] %></td>
          <td><%= cortege['user']['email'] %></td>
          <td><%= readable_status cortege['status'] %></td>
          <td><%= cortege['approved'] ? 'Ja' : 'Nej' %></td>
          <td><%= cortege['paid'] ? 'Ja' : 'Nej' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
