<% content_for :header_title do %>
    Funkisanmälan
<% end %>

<div class="container">
  <h3>Sammanställning av funkisanmälan</h3>

  <div class="row">
    <div class="col m6">
      <p>
        <b>Namn:</b>
        <br/>
        <%= current_user['display_name'] %>
      </p>

      <p>
        <b>LiU-ID:</b>
        <br/>
        <%= current_user['nickname'] %>
      </p>

      <p>
        <b>E-post:</b>
        <br/>
        <%= current_user['email'] %>
      </p>

      <p>
        <b>Personnummer:</b>
        <br/>
        <%= @funkis_application['ssn'] %>
      </p>

      <p>
        <b>Telefonnummer:</b>
        <br/>
        <%= @funkis_application['phone'] %>
      </p>

      <p>
        <b>Allergier och/eller specialkost:</b>
        <br/>
        <%= @funkis_application['allergies'] %>
      </p>

      <p>
        <b>Storlek på jobbtröja:</b>
        <br/>
        <%= @funkis_application['tshirt_size'] %>
      </p>

      <p>
        <b>Har du B-körkort?</b>
        <br/>
        <%= @funkis_application['drivers_license'] ? 'Ja' : 'Nej' %>
      </p>

      <p>
        <b>Vilket förköp är du intresserad av?</b>
        <br/>
        <%= @funkis_application['presale_choice'] ? 'München Hoben' : 'Inget' %>
      </p>
    </div>

    <div class="col m6">
      <h5>Arbetspass (totalt <%= @total_points %> poäng)</h5>
      <% @funkis_application['funkis_shift_applications'].each do |s| %>
        <p>
          <b><%= s['funkis_shift']['funkis_category']['funkis_name'] %> (<%= s['funkis_shift']['points'] %> poäng)</b>
          <br/>
          <%= s['funkis_shift']['day'] %>
          <br/>
          <%= s['funkis_shift']['time'] %>
        </p>
      <% end %>
    </div>
  </div>
</div>
