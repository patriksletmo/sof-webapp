<% content_for :header_title do %>Orkester<% end %>

<div class="container">
  <div class="row">
    <form method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <h2 class="header">Skapa din orkester</h2>

      <div class="row">
        <div class="col s12 m6 l6">
          <label for="orchestra-name">Orkesternamn</label>
          <input type="text" id="orchestra-name" name="item[name]" required>
        </div>

        <div>
          <div class="input-field col s12">
            <label>Balett eller orkester?</label>
          </div>

          <div class="input-field col s12">
            <p>
              <input id="performingAs_orch" type="radio" name="item[ballet]" value="false" checked>
              <label for="performingAs_orch">Orkester</label>
            </p>
            <p>
              <input id="performingAs_bal" type="radio" name="item[ballet]" value="true">
              <label for="performingAs_bal">Balett</label>
            </p>
            <p>
              <input id="performingAs_orch_bal" type="radio" name="item[ballet]" value="true">
              <label for="performingAs_orch_bal">Orkester + Balett</label>
            </p>
          </div>
        </div>
    </div>

      <div class="row">
        <div class="input-field col s12">
          <label>Vill ni sova i sovsal?</label>
          <br>
          <p>
            Kommer ni sova o sovsal? Era medlemmar har möjlighet att välja individuellt.
          </p>
        </div>

        <div class="input-field col s12">
          <p>
            <!-- the orchs are comming!! -->
            <input id="dormitory_yes" type="radio" name="item[dormitory]" value="true" checked>
            <label for="dormitory_yes">Ja</label>
          </p>
          <p>
            <input id="dormitory_no" type="radio" name="item[dormitory]" value="false">
            <label for="dormitory_no">Nej</label>
          </p>
        </div>
      </div>

      <button type="submit" class="btn">Skapa orkester</button>
    </form>
  </div>
</div>
