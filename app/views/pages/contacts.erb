<div class="container" xmlns:background-repeat="http://www.w3.org/1999/xhtml">

  <div>
    <h2>Kontaktinfomation</h2>
    <h3>Styrelsen</h3>
    <div class="row">
      <% @contacts.each do |c| %>
        <div class="col s12 m6 l4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= c.title %></span>
                <h5><%= c.name %></h5>
            </div>
            <div class="card-action">
              <a href="mailto:<%= c.email %>"><%= c.email %></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
