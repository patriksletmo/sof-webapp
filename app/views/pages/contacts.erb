
<div class="container">
  <div class="row">
    <h2> <%= @header %> </h2>
    <% @contacts.each do |c| %>
      <div class="col s12 m6 l4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= c.title %></span>
              <h5><%= c.name %></h5>
          </div>
          <div class="card-action">
            <a href="mailto:<%= c.email %>" target="_blank"><%= c.email %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

