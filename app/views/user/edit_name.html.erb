<% content_for :header_title do %>Byta namn<% end %>

<div class="container">
  <p>Just nu heter du <i><%= current_user['display_name'] %></i> iallafall :)</p>
  <div class="row section">
    <div class="col s12 m6">
      <div class="card grey lighten-4">
        <form method="post" id="edit-display_name-form">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="card-content">
            <span class="card-title">Byta namn</span>
            <div class="input-field">
              <input type="text" name="display_name" id="display_name" required>
              <label for="display_name">Vad heter du nu d√•?</label>
            </div>
          </div>
            <div class="card-action">
              <a class="blue-text" href="javascript:;" onclick="document.getElementById('edit-display_name-form').submit();">BYT!</a>
            </div>

            <input id="edit-display_name-form"
                   type="submit"
                   style="position: absolute; left: -9999px; width: 1px; height: 1px;"
                   tabindex="-1" />
        </form>
      </div>
    </div>
  </div>
</div>