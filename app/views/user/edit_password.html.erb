<% content_for :header_title do %>Ändra Lösenord<% end %>

<div class="container">
  <div class="row section">
    <div class="col s12 m6">
      <div class="card grey lighten-4">
        <form method="post" id="edit-password-form">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="card-content">
            <span class="card-title">Ändra lösenord</span>
            <div class="input-field">
              <input type="password" name="current_password" id="current_password" required>
              <label for="password">Nuvarande lösenord</label>
            </div>
            <div class="input-field">
              <input type="password" name="new_password" id="new_password" required>
              <label for="password">Nytt Lösenord</label>
            </div>
            <div class="input-field">
              <input type="password" name="password_confirmation" id="password_confirmation" required>
              <label for="password_confirmation">Upprepa lösenord</label>
            </div>

            <div class="card-action">
              <a class="blue-text" href="javascript:;" onclick="document.getElementById('edit-password-submit').click();">Skicka</a>
            </div>

          </div>
            <input id="edit-password-submit"
                   type="submit"
                   style="position: absolute; left: -9999px; width: 1px; height: 1px;"
                   tabindex="-1" />
        </form>
      </div>
    </div>
  </div>
</div>