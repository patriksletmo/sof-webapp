        <script type="application/javascript">
            Materialize.toast('<%= value %>', 4000)
        </script>
    <% end %>

    <%= form_for(@credentials, url: '/login') do |f| %>
        <div class="input-field">
          <%= f.email_field :email %>
          <label for="email">E-mail</label>
        </div>
        <div class="input-field">
          <%= f.password_field :password %>
          <label for="password">LÃ¶senord</label>
        </div>
        <button type="submit" class="btn waves-effect waves-light">Logga in</button>
        <a class="btn waves-effect waves-light" href="<%= url_for action: 'login_liu_id' %>">Logga in med LiU-ID</a>
    <% end %>


  </div>
</div>
