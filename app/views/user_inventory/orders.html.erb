<% content_for :header_title do %>Ordrar<% end %>

<div class="container">
  <table class="highlight">
    <thead>
    <tr>
      <th>Order</th>
      <th>Datum</th>
      <th>Belopp</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr data-href="<%= url_for action: :order, id: order['id'] %>">
          <td>#<%= order['id'] %></td>
          <td><%= date order['created_at'] %></td>
          <td><%= cost order['amount'] %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
