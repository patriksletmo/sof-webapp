<% content_for :header_title do %>Varukorg<% end %>

<div class="container">
  <table>
    <thead>
    <tr>
      <th>Namn</th>
      <th>Pris</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @cart['cart_items'].each do |item| %>
        <tr>
          <% if item['product']['kind'].nil? %>
            <td><%= item['product']['base_product']['name'] %></td>
          <% else %>
            <td><%= "#{item['product']['base_product']['name']} (#{item['product']['kind']})" %></td>
          <% end %>
          <td><%= item['product']['base_product']['cost'] %></td>
          <td>
            <form method="post" action="<%= url_for action: :remove_item_from_cart, id: item['id'] %>">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <button class="btn red" type="submit">Ta bort</button>
            </form>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br/>
  <form class="inline" method="post" action="<%= url_for action: :clear_cart %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button class="btn green" type="submit">Till kassan</button>
  </form>
  <form class="inline" method="post" action="<%= url_for action: :clear_cart %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button class="btn red" type="submit">Rensa</button>
  </form>
</div>