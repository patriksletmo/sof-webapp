<%=	form_tag(controller: 'webstore', action: 'charge', method: 'post') do %>
    <script
    src = "https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key = "<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>"
    data-amount = "<%= @amount %>"
    data-name = "Linköpings Tekonologers Studentkår"
    data-description = "ditt inköp"
    data-image = "https://stripe.com/img/documentation/checkout/marketplace.png"
    data-locale = "auto"
    data-zip-code = "true"
    data-currency = "sek"
    data-email = "<%=	current_user["email"] %>"
    >
    </script>
<% end %>